/**
 * 弧形菜单
 **/

 .circular-menu {
  position: fixed;
  bottom:2em;
  right: 1em;
}

.circular-menu .floating-btn {
  display: block;
  width: 2.5em;
  height: 2.5em;
  border-radius: 50%;
  color: hsl(0, 0%, 100%);
  text-align: center;
  line-height: 2.0;
  outline: 0;
}


.circular-menu .floating-btn .icon {
  transition: transform .2s;
}

.circular-menu.active .floating-btn .icon {
  transform: rotate(-45deg);
}

.circular-menu:after {
  display: block;
  content: ' ';
  width: 2.5em;
  height: 2.5em;
  border-radius: 50%;
  position: absolute;
  top: 0;
  right: 0;
  z-index: -2;
  background-image: linear-gradient( 135deg, #ABDCFF 10%, #0396FF 100%);
    transition: all .3s ease;
}

.circular-menu.active:after {
  transform: scale3d(4.5, 4.5, 1);
  transition-timing-function: cubic-bezier(.68, 1.55, .265, 1);
}

.circular-menu .items-wrapper {
  padding: 0;
  margin: 0;
}

.circular-menu .menu-item {
  position: absolute;
  top: 0.2em;
  right: 0.25em;
  z-index: -1;
  display: block;
  text-decoration: none;
  color: hsl(0, 0%, 100%);
  font-size: 1em;
  width: 2.0em;
  height: 2.0em;
  border-radius: 50%;
  text-align: center;
  line-height: 1;
  transition: transform .3s ease, background .2s ease;
}



.circular-menu.active .menu-item {
  transition-timing-function: cubic-bezier(0.175, 0.885, 0.32, 1.275);
}

.circular-menu.active .menu-item:nth-child(1) {
  transform: translate3d(0.3em,-3.5em,0);
}

.circular-menu.active .menu-item:nth-child(2) {
  transform: translate3d(-2.5em,-1.9em,-0);
}

.circular-menu.active .menu-item:nth-child(3) {
  transform: translate3d(-3.5em,1.0em,0);
}

.circular-menu.active .menu-item:nth-child(4) {
  transform: translate3d(-3.5em,1.5em,0);
}
