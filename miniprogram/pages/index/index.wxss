/* 瀑布流文章 */
.container{
  margin-top: 10px;
  /* padding-left: 10rpx;
  padding-right: 10rpx; */
}

.su-list{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-around;

}

.list-item{
  width: 320rpx;
	height: auto;
	padding: 10rpx;
	overflow: hidden;
	margin-bottom: 10rpx;
	background-color: #ffffff;
	border-radius: 10px;
}
.list-item image {
	width: 100%;
	height: 200rpx;
  border-radius: 10px;
  object-fit: cover;
}

.su-list-title {
	font-size: 30rpx;
	color: #333;
	text-overflow: ellipsis;
	white-space: nowrap;
	overflow: hidden;
}

.su-list-text {
	font-size: 24rpx;
  color: #999;
  line-height: 1.8;
	text-overflow: ellipsis;
	white-space: pre-wrap;
	overflow: hidden;
	display: -webkit-box;
	-webkit-line-clamp: 2;
	-webkit-box-orient: vertical
}
.su-list-bottom{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.su-list-money {
	font-size: 25rpx;
  color: #6a8acd;
  display: flex;
  flex-direction: row;
  align-items: space-between;
  justify-content: center;
  letter-spacing: 1.5px;
  /* background-image: linear-gradient(to right, #ff758c 0%, #ff7eb3 100%); */
}
